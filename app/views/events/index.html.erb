<section class="top-left-box">
  <header role="banner">
    <h1>Beerded Happiness</h1>
  </header>
  <%= button_to 'Create Event', new_event_path, :method => :get, :id => "btn-create-event" %>
  <br><br>

  <%= flash[:search] %>
  <%= flash[:edit_error] %>

  <%= form_tag("/search", method: "get") do %>
    <p><%= label_tag(:q, "Search for event:") %><br>
    <%= text_field_tag(:q) %></p>
    <%= submit_tag("Search", :id => "btn-search") %>
  <% end %>
</section>

<aside class="right-bottom-box">
  <h3>Active Events</h3>
  <% if @active_events.empty? %>
    <p>No Active Events...</p>
  <% else %>
    <%= render 'event_display', events: @active_events %>
  <% end %>

  <h3>Inactive Events</h3>
  <% if @inactive_events.empty? %>
    <p>No Inactive Events...</p>
  <% else %>
    <%= render 'event_display', events: @inactive_events %>
  <% end %>

  <h3>Past Events</h3>
  <% if @past_events.empty? %>
    <p>No Past Events...</p>
  <% else %>
    <%= render 'event_display', events: @past_events %>
  <% end %>
</aside>
