<div class="show-game">
	<h4>You're Up!</h4>
	<%= @current_game.event.title %> Game <%= @current_game.id %>
	<p>Status: <%= @current_game.status %></p>


	<%= button_to "I Won!", { :controller => "games", :action => "update", :won => true, :game_id => @current_game.id}, :method => :patch, :id => "btn-won" %>

	<%= button_to "I Lost :(", { :controller => "games", :action => "update", :won => false, :game_id => @current_game.id}, :method => :patch, :id => "btn-lost" %>
</div>
